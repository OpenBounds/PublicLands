      "type": "array",
      "items": {
        "$ref": "#/definitions/position"
      }
    },
    "linearRing": {
      "description": "An array of four or more positions where the first equals the last",
      "allOf": [
        {
          "$ref": "#/definitions/positionArray"
        },
        {
          "minItems": 4
        }
      ]
    },
    "polygon": {
      "description": "An array of linear rings",
      "type": "array",
      "items": {
        "$ref": "#/definitions/linearRing"
      }
    }
