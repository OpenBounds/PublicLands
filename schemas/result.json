        "properties": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "name"
          ]
        }
      },
      "required": [
        "geometry",
        "properties"
      ]
    },
    "geometry": {
      "title": "geometry",
      "required": [
        "type",
        "coordinates"
      ],
      "oneOf": [
        {
          "title": "Polygon",
          "properties": {
